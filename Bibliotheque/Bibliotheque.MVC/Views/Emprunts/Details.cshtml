@model Bibliotheque.MVC.Models.Emprunt

@{
    ViewData["Title"] = "Details";
}

<h1>Informations sur l'emprunt</h1>

<div>
    <h4>Emprunt #@Model.ID</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.DateEmprunt)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DateEmprunt)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.DateRetourLimite)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DateRetourLimite)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.DateRetour)
        </dt>
        @if (Model.DateRetour == null)
        {
            <dd class="col-sm-8">S.O.</dd>
        }
        else
        {
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateRetour)</dd>

        }
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Livre)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Livre.Titre)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Usager)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Usager.Nom)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Retourner</a> |
    <a asp-action="Index">Retour à la liste des emprunts</a>
</div>
