@model IEnumerable<Bibliotheque.MVC.Models.Livre>

@{
    ViewData["Title"] = "Livres - Liste complète";
}

<h1>Liste des livres</h1>

<a class="btn btn-primary" asp-action="Create">Ajouter un nouveau livre</a>

<br /><br />

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Recherche: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Recherche" class="btn btn-default" /> |
            <a asp-action="Index">Retour à la liste de livres</a>
        </p>
    </div>
</form>


<table class="table table-striped table-dark table-bordered text-center">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-ordreTri="@ViewData["TriParCodeUnique"]">@Html.DisplayNameFor(model => model.CodeUnique)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-ordreTri="@ViewData["TriParTitre"]">@Html.DisplayNameFor(model => model.Titre)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auteurs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodeUnique)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteurs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                <a class="text-warning" asp-action="Edit" asp-route-id="@item.ID">Modifier</a> |
                <a class="text-warning" asp-action="Details" asp-route-id="@item.ID">Détails</a> |
                <a class="text-warning" asp-action="Delete" asp-route-id="@item.ID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
