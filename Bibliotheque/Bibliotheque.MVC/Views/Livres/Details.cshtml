@model Bibliotheque.MVC.Models.Livre

@{
    ViewData["Title"] = "Livre - Détails";
}

<h1>Informations sur le livre</h1>

<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodeUnique)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodeUnique)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn10)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isbn10)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn13)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isbn13)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Auteurs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Auteurs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorie)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Emprunts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                @*<tr>
                    <th>Emprunts</th>
                </tr>*@
                <tr>
                    <th>Usager</th>
                    <th>Date de l'emprunt</th>
                    <th>Date de retour limite</th>
                    <th>Date de retour</th>
                </tr>

                @foreach (var item in Model.Emprunts)
                {
                    string couleur = "white";
                    if (item.DateRetour == null)
                    {
                        couleur = "red";
                    }

                    <tr style="background-color:@couleur">
                        <td>
                            @Html.DisplayFor(modelItem => item.Usager.Prenom) @Html.DisplayFor(modelItem => item.Usager.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateEmprunt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRetourLimite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRetour)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Modifier</a> |
    <a asp-action="Index">Retour à la liste de livres</a>
</div>
